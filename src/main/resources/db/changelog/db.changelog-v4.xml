<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="V4.0.0" author="nmy">
        <comment>用户信息和资讯</comment>
        <createTable tableName="prad_user" remarks="用户信息表">
            <column name="u_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="u_name" type="varchar(128)" remarks="用户名"/>
            <column name="u_province" type="varchar(128)" remarks="省份"/>
            <column name="u_city" type="varchar(128)" remarks="城市"/>
            <column name="u_region" type="varchar(128)" remarks="区县"/>
            <column name="u_hospital" type="varchar(128)" remarks="医院"/>
            <column name="u_dept" type="varchar(128)" remarks="科室"/>
            <column name="u_professional" type="varchar(128)" remarks="职称"/>
            <column name="u_phone" type="varchar(128)" remarks="手机号"/>
            <column name="u_create_time" type="bigint" remarks="创建时间"/>
            <column name="u_update_time" type="bigint" remarks="修改时间"/>
        </createTable>

        <createTable tableName="prad_news" remarks="通用资讯表">
            <column name="ne_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ne_nc_id" type="bigint" remarks="分类id"/>
            <column name="ne_title" type="varchar(128)" remarks="标题"/>
            <column name="ne_thumbnail_path" type="varchar(128)" remarks="缩略图路径"/>
            <column name="ne_carousel_path" type="varchar(128)" remarks="轮播图路径"/>
            <column name="ne_content" type="longtext" remarks="内容"/>
            <column name="ne_video_path" type="varchar(128)" remarks="视频路径"/>
            <column name="ne_hits" type="int" remarks="点击量"/>
            <column name="ne_like_num" type="int" remarks="点赞量"/>
            <column name="ne_book_num" type="int" remarks="收藏量"/>
            <column name="ne_is_banner" type="int" remarks="是否是头图(0:否，1：是)"/>
            <column name="ne_banner_pic_path" type="varchar(128)" remarks="头部路径"/>
            <column name="ne_expert_id" type="bigint" remarks="关联专家id"/>
            <column name="ne_date" type="bigint" remarks="显示用发布日期"/>
            <column name="ne_from" type="varchar(128)" remarks="来源"/>
            <column name="ne_publish_user_id" type="bigint" remarks="发布人id"/>
            <column name="ne_publish_user_name" type="varchar(128)" remarks="发布人姓名"/>
            <column name="ne_create_time" type="bigint" remarks="发布时间"/>
            <column name="ne_update_user_id" type="bigint" remarks="更新人id"/>
            <column name="ne_update_user_name" type="varchar(128)" remarks="更新人姓名"/>
            <column name="ne_update_time" type="bigint" remarks="更新时间"/>
            <column name="ne_is_valid" type="int" remarks="是否有效(0：无效；1：有效)"/>
            <column name="ne_is_carousel" type="int" remarks="是否显示轮播图,(0,不显示,1:显示)"/>
        </createTable>


        <createTable tableName="prad_news_category" remarks="资讯分类表">
            <column name="nc_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nc_pid" type="bigint" remarks="父id"/>
            <column name="nc_name" type="varchar(128)" remarks="名称"/>
            <column name="nc_memo" type="varchar(512)" remarks="介绍文字"/>
            <column name="nc_pic_path" type="varchar(128)" remarks="缩略图"/>
            <column name="nc_add1" type="varchar(128)" remarks="备用1"/>
            <column name="nc_add2" type="varchar(128)" remarks="备用2"/>
            <column name="nc_add3" type="varchar(128)" remarks="备用3"/>
        </createTable>

        <createTable tableName="prad_like_record" remarks="点赞记录表">
            <column name="lr_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lr_user_id" type="bigint" remarks="用户主键"/>
            <column name="lr_news_id" type="bigint" remarks="资讯主键"/>
            <column name="lr_time" type="bigint" remarks="点赞时间"/>
        </createTable>

        <createTable tableName="prad_bookmark_record" remarks="收藏记录表">
            <column name="br_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="br_user_id" type="bigint" remarks="用户主键"/>
            <column name="br_news_id" type="bigint" remarks="文章主键"/>
            <column name="br_time" type="bigint" remarks="收藏时间"/>
            <column name="br_thumb_path" type="bigint" remarks="文章缩略图"/>
            <column name="br_title" type="bigint" remarks="文章标题"/>
            <column name="br_article_path" type="bigint" remarks="文章路径"/>
        </createTable>

        <createTable tableName="prad_comment" remarks="评论表">
            <column name="c_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="c_user_id" type="bigint" remarks="用户主键"/>
            <column name="c_user_name" type="bigint" remarks="用户姓名"/>
            <column name="c_news_id" type="bigint" remarks="文章主键"/>
            <column name="c_content" type="varchar(128)" remarks="评论内容"/>
            <column name="c_hits" type="int" remarks="本条评论点赞量"/>
            <column name="c_time" type="bigint" remarks="评论时间"/>
        </createTable>

        <createTable tableName="prad_expert" remarks="专家表">
            <column name="e_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="e_name" type="bigint" remarks="专家名称"/>
            <column name="e_head_path" type="bigint" remarks="头像缩略图"/>
            <column name="e_hospital" type="bigint" remarks="医院"/>
            <column name="e_dept" type="varchar(128)" remarks="科室"/>
            <column name="e_professional" type="int" remarks="职称"/>
            <column name="e_create_time" type="bigint" remarks="创建时间"/>
            <column name="e_create_user_id" type="bigint" remarks="创建人id"/>
            <column name="e_create_user_name" type="bigint" remarks="创建人姓名"/>
            <column name="e_update_time" type="bigint" remarks="更新时间"/>
            <column name="e_update_user_id" type="bigint" remarks="更新人id"/>
            <column name="e_update_user_name" type="bigint" remarks="更新人姓名"/>
        </createTable>

    </changeSet>
</databaseChangeLog>
