<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="V10.2.0" author="nmy">
        <comment>用户表/资讯表/积分规则表添加字段</comment>
        <addColumn tableName="prad_user">
            <column beforeColumn="pu_create_time" name="pu_total_score"  type="int" remarks="总积分"/>
        </addColumn>
        <addColumn tableName="prad_news">
            <column name="ne_tag_ids"  type="varchar(128)" remarks="内容标签（以逗号分隔）"/>
        </addColumn>
        <addColumn tableName="prad_score_rule">
            <column name="sr_type"  type="varchar(64)" remarks="类型"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>

